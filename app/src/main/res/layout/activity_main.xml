<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#1a1a1a">

    <TextView
        android:id="@+id/noteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guitar Tuner"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/frequencyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0 Hz"
        android:textSize="20sp"
        android:textColor="#CCCCCC"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Tuner Dial -->
    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/tuner_dial_background">

        <!-- Center line -->
        <View
            android:layout_width="4dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="#FFFFFF" />

        <!-- Left indicator (flat) -->
        <View
            android:id="@+id/leftIndicator"
            android:layout_width="3dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="60dp"
            android:background="#FF0000"
            android:visibility="gone" />

        <!-- Right indicator (sharp) -->
        <View
            android:id="@+id/rightIndicator"
            android:layout_width="3dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="240dp"
            android:background="#FF0000"
            android:visibility="gone" />

        <!-- Centered indicator (in tune) -->
        <View
            android:id="@+id/centerIndicator"
            android:layout_width="4dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="#00FF00"
            android:visibility="gone" />

        <!-- Flat and Sharp labels -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="♭"
            android:textSize="16sp"
            android:textColor="#FF0000"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="♯"
            android:textSize="16sp"
            android:textColor="#FF0000"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="260dp" />

    </FrameLayout>

    <TextView
        android:id="@+id/accuracyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:textColor="#FFD700"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Start Tuning"
        android:textSize="18sp"
        android:background="@drawable/button_background"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Stop Tuning"
        android:textSize="18sp"
        android:background="@drawable/button_background"
        android:textColor="#FFFFFF"
        android:visibility="gone" />

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap Start to begin tuning"
        android:textSize="16sp"
        android:textColor="#888888"
        android:layout_marginTop="16dp" />
</LinearLayout>
